<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#9e030b" />

            <stroke android:width="1dp" android:color="@null" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#9e030b" android:startColor="#ce2029" />

            <stroke android:width="1dp" android:color="@null" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>

</selector>