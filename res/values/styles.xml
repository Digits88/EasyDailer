<resources>

    <style name="EasyDailerTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#444444</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="NumPad">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/numpad</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CallButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/call_button</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="BackSpaceButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/backspace_button</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>